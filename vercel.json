{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "pnpm install --no-frozen-lockfile"
      }
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "^/$", "dest": "/index.html", "status": 200 },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ],
  "build": {
    "env": {
      "VITE_API_BASE_URL": "/api"
    }
  },

  "env": {
    "VITE_API_BASE_URL": "/api"
  }
}
